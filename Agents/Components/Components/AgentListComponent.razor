@using Agents.Data
@rendermode InteractiveServer
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Список агентов</h2>
                </div>
                <div class="card-body">
                    <ul id="agents" class="list-group">
                        @foreach(var a in Data.AgentList)
                        {
                            <div class="row">
                                <div class="col-8">
                                    <li class="list-group-item">@a.Name</li>
                                </div>
                                <div class="col-4">
                                    <button class="btn btn-danger" @onclick="() => Data.AgentList.Remove(a)">Удалить</button>
                                </div>
                            </div>   
                        }
                    </ul>
                </div>
                <div class="card-footer">
                    <button class="btn btn-primary btn-block" @onclick="AddAgent">Добавить агента</button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public EventCallback AgentCreateEvent { get; set; }

    private void AddAgent()
    {
        AgentCreateEvent.InvokeAsync();
    }
}
